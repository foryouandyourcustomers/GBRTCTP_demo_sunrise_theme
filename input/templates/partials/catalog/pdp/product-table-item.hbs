<div class="my-orders-table-order">
  <div class="row">
    <div class="col-sm-2 hidden-xs">
      <img style="width: 60px;" class="img-lazy" data-original="{{item.image}}" alt="{{item.name}}" />    
    </div>
    <div class="col-sm-2 col-xs-4">
      <span>{{item.sku}}</span>
    </div>
    <div class="col-sm-2 hidden-xs">
      <span>{{item.dynamic.color}}</span>
    </div>
    <div class="col-sm-2 col-xs-4">
      <span>{{item.vrg}}</span>
    </div>
    <div class="col-sm-2 hidden-xs">
    	{{#if item.dynamic.availability}}
      		 <span class="green">{{i18n "catalog:variants.available"}}</span>
      	{{else}}
      	 	<span class="red">{{i18n "catalog:variants.notAvailable"}}</span>
    	{{/if}}    
    </div>
    <div class="col-sm-2 col-xs-4 text-right">
        <a href="{{item.product.variant.url}}" class="btn btn-default">Add</a>
    </div>
  </div>
</div>